<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Logs - ImportSDK Metrics</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .fade-in { animation: fadeIn 0.6s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="bg-base-100 min-h-screen">
    <!-- Navigation -->
    <div class="navbar bg-base-100 shadow-lg border-b border-base-200">
        <div class="flex-1">
            <a href="/" class="btn btn-ghost normal-case text-xl">
                <div class="w-8 h-8 gradient-bg rounded-lg flex items-center justify-center text-white font-bold mr-2">üìä</div>
                ImportSDK Metrics
            </a>
        </div>
        <div class="flex-none">
            <ul class="menu menu-horizontal px-1">
                <li><a href="/">Dashboard</a></li>
                <li><a href="/imports">Imports</a></li>
                <li><a href="/logs" class="active">Logs</a></li>
            </ul>
        </div>
    </div>

    <main class="container mx-auto px-4 py-6 max-w-7xl">
        <div class="fade-in">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-base-content mb-2">üìù Audit Logs</h1>
                <p class="text-base-content/70 text-lg">System logs, errors, and audit trail for all import operations</p>
            </div>

            <!-- Filters -->
            <div class="card bg-base-100 shadow-lg mb-6">
                <div class="card-body">
                    <div class="flex flex-wrap gap-4 items-center justify-between">
                        <div class="flex gap-2">
                            <button class="btn btn-outline btn-sm btn-active" onclick="filterLogs('all')">
                                All (<%= logs.length %>)
                            </button>
                            <button class="btn btn-outline btn-sm" onclick="filterLogs('error')">
                                Errors (<%= logs.filter(log => log.level === 'error').length %>)
                            </button>
                            <button class="btn btn-outline btn-sm" onclick="filterLogs('warning')">
                                Warnings (<%= logs.filter(log => log.level === 'warning').length %>)
                            </button>
                            <button class="btn btn-outline btn-sm" onclick="filterLogs('info')">
                                Info (<%= logs.filter(log => log.level === 'info').length %>)
                            </button>
                        </div>
                        <div class="flex gap-2">
                            <button class="btn btn-primary btn-sm" onclick="window.location.reload()">
                                üîÑ Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Logs Display -->
            <% if (logs.length === 0) { %>
                <div class="card bg-base-100 shadow-lg">
                    <div class="card-body text-center py-16">
                        <div class="text-8xl opacity-20 mb-6">üìù</div>
                        <h3 class="text-2xl font-bold text-base-content/70 mb-4">No logs found</h3>
                        <p class="text-base-content/50 mb-6">Audit logs and system events will appear here</p>
                    </div>
                </div>
            <% } else { %>
                <div class="space-y-4">
                    <% logs.forEach(function(log) { %>
                        <div class="card bg-base-100 shadow-lg log-entry hover:shadow-xl transition-shadow" 
                             data-level="<%= log.level %>" 
                             data-type="<%= log.type || '' %>">
                            <div class="card-body p-4">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex items-start gap-3 flex-1">
                                        <!-- Log Level Badge -->
                                        <div class="badge badge-lg
                                            <%= log.level === 'error' ? 'badge-error' : 
                                                log.level === 'warning' ? 'badge-warning' : 
                                                log.level === 'success' ? 'badge-success' : 'badge-info' %>">
                                            <% if (log.level === 'error') { %>üö®
                                            <% } else if (log.level === 'warning') { %>‚ö†Ô∏è
                                            <% } else if (log.level === 'success') { %>‚úÖ
                                            <% } else { %>‚ÑπÔ∏è
                                            <% } %>
                                            <%= log.level.toUpperCase() %>
                                        </div>
                                        
                                        <!-- Log Content -->
                                        <div class="flex-1">
                                            <div class="flex items-start justify-between mb-2">
                                                <h3 class="font-semibold text-base-content">
                                                    <%= log.message || 'No message' %>
                                                </h3>
                                                <div class="text-sm text-base-content/60">
                                                    <%= new Date(log.timestamp).toLocaleString() %>
                                                </div>
                                            </div>
                                            
                                            <!-- Log Metadata -->
                                            <div class="flex gap-4 text-sm text-base-content/70 mb-2">
                                                <% if (log.type) { %>
                                                    <div class="flex items-center gap-1">
                                                        <span class="opacity-60">Type:</span>
                                                        <span class="badge badge-outline badge-sm"><%= log.type %></span>
                                                    </div>
                                                <% } %>
                                                <% if (log.importId) { %>
                                                    <div class="flex items-center gap-1">
                                                        <span class="opacity-60">Import:</span>
                                                        <a href="/imports/<%= log.importId %>" class="link link-primary text-xs">
                                                            <%= log.importId.slice(0, 8) %>...
                                                        </a>
                                                    </div>
                                                <% } %>
                                                <div class="flex items-center gap-1">
                                                    <span class="opacity-60">ID:</span>
                                                    <span class="font-mono text-xs"><%= log.id %></span>
                                                </div>
                                            </div>
                                            
                                            <!-- Log Data -->
                                            <% if (log.data && Object.keys(log.data).length > 0) { %>
                                                <details class="mt-3">
                                                    <summary class="cursor-pointer text-primary font-medium text-sm mb-2">
                                                        üìä View additional data
                                                    </summary>
                                                    <div class="bg-base-200 p-3 rounded-lg overflow-x-auto">
                                                        <pre class="text-xs"><%= JSON.stringify(log.data, null, 2) %></pre>
                                                    </div>
                                                </details>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>

            <!-- Quick Stats -->
            <% if (logs.length > 0) { %>
                <div class="mt-8">
                    <div class="stats shadow w-full">
                        <div class="stat">
                            <div class="stat-title">Total Logs</div>
                            <div class="stat-value text-primary"><%= logs.length %></div>
                            <div class="stat-desc">In current view</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Error Count</div>
                            <div class="stat-value text-error"><%= logs.filter(log => log.level === 'error').length %></div>
                            <div class="stat-desc">Requires attention</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Warning Count</div>
                            <div class="stat-value text-warning"><%= logs.filter(log => log.level === 'warning').length %></div>
                            <div class="stat-desc">Monitor closely</div>
                        </div>
                        <div class="stat">
                            <div class="stat-title">Latest Log</div>
                            <div class="stat-value text-info text-sm">
                                <% if (logs.length > 0) { %>
                                    <% const diffMinutes = Math.floor((new Date() - new Date(logs[0].timestamp)) / (1000 * 60)); %>
                                    <% if (diffMinutes < 1) { %>Just now
                                    <% } else if (diffMinutes < 60) { %><%= diffMinutes %>m ago
                                    <% } else { %><%= Math.floor(diffMinutes / 60) %>h ago
                                    <% } %>
                                <% } else { %>N/A
                                <% } %>
                            </div>
                            <div class="stat-desc">Most recent entry</div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <script>
        function filterLogs(level) {
            const entries = document.querySelectorAll('.log-entry');
            entries.forEach(entry => {
                if (level === 'all') {
                    entry.style.display = '';
                } else {
                    const entryLevel = entry.getAttribute('data-level');
                    entry.style.display = entryLevel === level ? '' : 'none';
                }
            });
            
            // Update button states
            document.querySelectorAll('.btn-outline').forEach(btn => {
                btn.classList.remove('btn-active');
            });
            event.target.classList.add('btn-active');
        }

        // Auto-refresh every 30 seconds
        setTimeout(() => {
            window.location.reload();
        }, 30000);
    </script>
</body>
</html>